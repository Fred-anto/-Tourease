  <%= form_with(model: [chat, message], local: false, class: "d-flex mt-3") do |form| %>
    <%= form.text_area :content,
          class: "form-control me-2",
          rows: 2,
          placeholder: "Write your message..." %>
    <%= form.submit "Send", class: "btn btn-primary align-self-stretch"%>
  <% end %>
