<div id="new_message"
     style="position: fixed; bottom: 0; left: 50%; transform: translateX(-50%);
            max-width: 850px; width: 100%; height: 120px;
            background: transparent !important;
            box-shadow: none !important;
            -webkit-backdrop-filter: none !important;
            backdrop-filter: none !important;
            padding: 10px 10px; z-index: 100">
  <%= form_with(model: [chat, message], local: false, class: "d-flex align-items-center mt-3") do |form| %>

    <%= form.text_area :content,
          class: "form-control me-2 d-flex align-items-center",
          style: "resize:none; height:60px; padding-top:15px; display:flex; align-items:center;",
          placeholder: "Ask GuAIde for help..." %>

    <%= form.button type: "submit",
          class: "btn d-flex align-items-center justify-content-center rounded-pill text-white p-0",
          style: "background: #00A5CF !important; width:50px; height:50px" do %>
          <iconify-icon icon="streamline-plump:mail-send-email-message-solid" width="25" height="25" style="color: #fff"></iconify-icon>
    <% end %>
  <% end %>
</div>
