<% if @chat.previous_changes["title"].present? %>
  <%= turbo_stream.update "chat_title", @chat.title %>
<% end %>

<%= turbo_stream.append "messages" do %>
  <%= render "messages/messages", messages: @chat.messages.last(2), trip: @trip %>
<% end %>

<%= turbo_stream.update "new_message" do %>
  <%= render "messages/form", chat: @chat, message: Message.new %>
<% end %>
