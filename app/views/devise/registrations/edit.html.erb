<div class="container mt-5 profile-edit">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary d-flex justify-content-between align-items-center">
          <h2 class="mb-0">Edit profile ‚úèÔ∏è</h2>
          <%= link_to registration_path(resource_name),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your account?" },
                class: "trash-icon",
                title: "Delete my account" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource,
                              as: resource_name,
                              url: registration_path(resource_name),
                              html: { method: :put, multipart: true }) do |f| %>
            <%= f.error_notification %>
            <div class="form-group avatar-field mb-4">
              <label class="form-label fw-600 mb-2" style="color: var(--c-900);">Avatar</label>
              <div class="avatar-uploader d-flex align-items-center gap-3">
                <div class="avatar-frame <%= 'is-empty' unless resource.respond_to?(:avatar) && resource.avatar.attached? %>">
                  <% if resource.respond_to?(:avatar) && resource.avatar.attached? %>
                    <%= image_tag resource.avatar.variant(resize_to_fill: [160, 160]), class: "avatar-img", id: "avatarPreview" %>
                  <% else %>
                    <div class="avatar-placeholder" id="avatarPlaceholder">üë§</div>
                  <% end %>
                  <label class="avatar-change" for="user_avatar" title="Change photo">
                    <i class="fas fa-camera"></i>
                  </label>
                </div>
                <%= f.input :avatar,
                            as: :file,
                            label: false,
                            input_html: { id: "user_avatar", accept: "image/*", class: "d-none" } %>
              </div>
            </div>
            <div class="form-group">
              <%= f.input :email,
                          label: 'Email',
                          required: true,
                          autofocus: true,
                          input_html: { class: 'form-control' } %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p class="text-muted mt-1">
                  Currently waiting confirmation for:
                  <strong><%= resource.unconfirmed_email %></strong>
                </p>
              <% end %>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :password,
                              label: 'New password',
                              hint: "Leave blank if you don't want to change it",
                              required: false,
                              input_html: { autocomplete: "new-password", class: 'form-control' } %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation,
                              label: 'Password confirmation',
                              required: false,
                              input_html: { autocomplete: "new-password", class: 'form-control' } %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.input :current_password,
                          label: 'Current password',
                          hint: 'We need your current password to confirm your changes',
                          required: true,
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
            </div>
            <div class="form-group d-flex mt-4 gap-3 flex-wrap">
              <%= f.submit 'Update', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="danger-actions d-flex mt-4 mb-4 align-items-center justify-content-end">
        <%= button_to "Log out",
                      destroy_user_session_path,
                      method: :delete,
                      class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>
