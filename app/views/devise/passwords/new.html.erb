<div class="container mt-5 profile-edit">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary d-flex justify-content-between align-items-center">
          <h2 class="mb-0">Forgot your password? üîê</h2>
        </div>

        <div class="card-body">
          <%= simple_form_for(resource,
                              as: resource_name,
                              url: password_path(resource_name),
                              html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-group">
              <%= f.input :email,
                          label: 'Email',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control' } %>
            </div>

            <div class="form-group d-flex mt-4 gap-3 flex-wrap">
              <%= f.button :submit, "Send reset link", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 d-flex gap-3 flex-wrap">
            <%= link_to "Log in", new_session_path(resource_name) %>
            <%= link_to "Sign in", new_registration_path(resource_name) %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
