<%= render "shared/navbar" %>

<!-- Section My Current Trips -->
<div class="container mt-3">
  <div class="section-block">
    <h2 class="section-title">✈️ My Current Trips</h2>
    <div class="swipe-carousel" data-controller="swipe">
      <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My current trips">
        <% @trips.last(5).each do |trip| %>
          <div class="card h-100">
            <%= image_tag "trip placeholder.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><b><%= trip.name %></b></h5>
              <%= link_to "", trip_path(trip), class: "stretched-link", aria: { label: "Voir #{trip.name}" } %>
            </div>
            <div class="card-footer bg-transparent">
              <h6 class="mb-1">🌴 <%= trip.destination %></h6>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Section My Past Trips -->
<div class="container mt-3">
  <div class="section-block">
    <h2 class="section-title">🧳 My Past Trips</h2>
    <div class="swipe-carousel" data-controller="swipe">
      <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My last trips">
        <% @trips.first(10).each do |trip| %>
          <div class="card h-100">
            <%= image_tag "trip placeholder.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><b><%= trip.name %></b></h5>
              <%= link_to "", trip_path(trip), class: "stretched-link", aria: { label: "Voir #{trip.name}" } %>
            </div>
            <div class="card-footer bg-transparent">
              <h6 class="mb-1">🌴 <%= trip.destination %></h6>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
