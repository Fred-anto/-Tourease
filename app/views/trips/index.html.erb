<%= render "shared/navbar" %>

<div class="d-flex justify-content-center mt-4">
  <h2>My Current Trips</h2>
</div>

<div class="container mt-5 trips-show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="trip-card shadow-lg">
      <div class="swipe-carousel" data-controller="swipe">
        <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="Top trendy activities">
          <% @trips.last(5).each do |trip| %>
            <div class="card h-100">
                <%= image_tag "trip placeholder.jpg", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title mb-1"><b><%= trip.name %></b></h5>
                <%= link_to "", trip_path(trip), class: "stretched-link", aria: { label: "Voir #{trip.name}" } %>
              </div>
              <div class="card-footer bg-transparent">
                <h5 class="card-title mb-1">ðŸŒ´ <%= trip.destination %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

