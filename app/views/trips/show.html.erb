<div class="container mt-5 trips-show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="trip-card shadow-lg">

        <!-- HEADER -->
        <div class="trip-card__header p-6 p-md-3">
          <div class="d-flex justify-content-between align-items-start">
            <h1 class="title mb-0"><%= @trip.name %></h1>
            <%= link_to trip_path(@trip),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?" },
                  class: "trash-icon",
                  title: "Delete trip" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>

          <p class="subtitle mt-2">
            <span class="chip">üìç&nbsp;<strong><%= @trip.destination %></strong></span>
             <span class="mt-2 chip">Interests:&nbsp;
              <span><%= @trip.categories.map { |c| c.name.split.last }.join(' ') %></span>
            </span>
          </p>



          <div class="mt-2 chips">
             <% if @trip.mood.present? %>
              <span class="chip chip--mint"><%= @trip.mood %></span>
            <% end %>
            <% if @trip.start_date.present? %>
              <span class="chip">

                üìÜ <%= l(@trip.start_date, format: "%b-%d-%Y") %> - <%= l(@trip.end_date, format: "%b-%d-%Y") %>
              </span>
            <% end %>
          </div>
        </div>

        <!-- BODY -->
        <div class="trip-card__body p-6 p-md-3">
          <h3 class="chip-title mb-3">My Calendar</h3>
          <div class="row">
            <% if @trip.trip_activities.any? %>
              <!-- CALENDAR -->
              <div class="swipe-carousel" data-controller="swipe">
                <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My activities" style="margin-right: 10px; border-radius: 4px;">
                  <% if @trip.start_date.present? && @trip.end_date.present? %>
                    <% number_of_days = (@trip.end_date.to_date - @trip.start_date.to_date).to_i + 1 %>
                    <%= calendar(start_date: @trip.start_date.to_date, number_of_days: number_of_days) do |date| %>

                      <div style="display: inline-block; vertical-align: top; width: 170px; min-height: 100px; margin: 0 8px;">
                        <div>
                          <em><%= date.strftime("%d %b") %></em>
                          <% @trip.trip_activities.each do |event| %>
                            <% if event.start_date_time&.to_date && event.end_date_time&.to_date %>
                              <% if event.start_date_time.to_date <= date && event.end_date_time.to_date >= date %>
                                <div class="event my-1" style="border: 1px solid #ddd; border-radius: 8px; padding: 8px; min-height: 90px;">
                                  <div class="event-time"><%= event.start_date_time.strftime("%H:%M") %></div>
                                  <div class="event-name"><strong><%= event.activity.name %></strong></div>
                                </div>
                              <% end %>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>

              <!-- ACTIVITY CARDS -->
              <h3 class="chip-title my-act mb-3">My Activities</h3>
              <div class="swipe-carousel" data-controller="swipe">
                <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My activities">
                  <% @trip.trip_activities.each do |trip_activity| %>
                    <% activity = trip_activity.activity %>
                    <div class="card h-100">
                        <%= link_to "", activity_path(activity, trip_id: @trip.id),
                              class: "stretched-link",
                              aria: { label: "Voir #{activity.name}" } %>
                      <% if activity.photo.attached? %>
                        <%= cl_image_tag activity.photo.key, class: "card-img-top" %>
                      <% else %>
                        <%= image_tag "placeholder.svg", class: "card-img-top" %>
                      <% end %>
                      <div class="card-body">
                        <h5 class="card-title"><b><%= activity.name %></b></h5>
                        <p class="card-text text-muted mb-0"><%= activity.description %></p>
                      </div>
            <!-- Footer : Adresse + √âtoiles (non cliquables ici, la card enti√®re m√®ne √† la show) -->
            <div class="card-footer bg-transparent footer-stack">
              <p class="mb-1 address-line"><%= activity.address %></p>
              <div class="rating-row d-inline-flex align-items-center gap-2">
                <%= render "shared/rating",
                           rating: activity.rating_avg,
                           reviews_count: activity.reviews_count %>
              </div>
            </div>

                    </div>
                  <% end %>
                </div>
              </div>

             <% else %>
              <!-- EMPTY STATE -->
               <div class="col-12">
                  <div class="empty-state mt-2">
                    <p class="m-0">No Activity planned yet</p>
                  </div>
               </div>
             <% end %>
          </div>

            <div class="d-flex flex-wrap gap-3 mt-4">
              <%= button_to "üóìÔ∏è GuAIde planner", chats_path(trip_id: @trip.id), method: :post, class: "btn btn-primary" %>
              <%= button_to "üîé Activities", trip_trip_activities_path(trip_id: @trip.id), method: :get, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <!-- CHATS History -->

      <% if @chats.present? && @chats.any? %>
        <div class="mt-4 text-center">
          <h4 class="mb-3">Previous conversations:</h4>
          <div class="row g-2 justify-content-center">
            <% @chats.each do |chat| %>
              <div class="col-12">
                <%= link_to chat.title, chat_path(chat),
                      class: "badge d-block text-truncate bg-light px-3 py-2 rounded-3 text-dark text-decoration-none conversation-badge",
                      style: "max-width: 100%;" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
