<div class="container mt-5 trips-show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="trip-card shadow-lg">

        <div class="trip-card__header">
          <div class="d-flex justify-content-between align-items-start">
            <h1 class="title mb-0"><%= @trip.name %></h1>
            <%= link_to trip_path(@trip),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?" },
                  class: "trash-icon",
                  title: "Delete trip" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>

          <p class="subtitle mt-2">
            <span class="muted">Destination:</span>
            <strong><%= @trip.destination %></strong>
          </p>

          <div class="chips">
            <% if @trip.start_date.present? %>
              <span class="chip">ðŸ“… <%= l(@trip.start_date, format: "%d %B %Y") %> - <%= l(@trip.end_date, format: "%d %B %Y") %></span>
            <% end %>
            <% if @trip.mood.present? %>
              <span class="chip chip--mint"><%= @trip.mood %></span>
            <% end %>
          </div>
        </div>

        <div class="trip-card__body p-4 p-md-3">
          <h3 class="section-title mb-0">My activities</h3>
          <div class="row">

            <% if @trip.trip_activities.any? %>

              <div class="swipe-carousel" data-controller="swipe">
                <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My activities"  style="margin-right: 10px; border-radius: 4px;">
                 <% number_of_days = (@trip.end_date.to_date - @trip.start_date.to_date).to_i + 1 %>

                  <%= calendar(start_date: @trip.start_date.to_date, number_of_days: number_of_days) do |date|%>
                  <div style="display: inline-block; vertical-align: top; width: 170px; min-height: 100px; mx-2">

                    <div>
                      <em><%= date.strftime("%a %d %b") %></em>

                      <% @trip.trip_activities.each do |event| %>
                        <% if event.start_date_time.to_date <= date && event.end_date_time.to_date >= date %>
                           <div class="event my-1" style= "border: 1px solid #ddd; border-radius: 8px; padding: 8px; min-height: 90px;">
                              <div class="event-time"><%= event.start_date_time.strftime("%H:%M") %></div>
                              <div class="event-name"><strong><%= event.activity.name %></strong></div>
                            </div>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                  </div>
              </div>

              </div>

              <div class="swipe-carousel" data-controller="swipe">
                <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="My activities">
                  <% @trip.trip_activities.each do |trip_activity| %>
                    <% activity = trip_activity.activity %>
                    <div class="card h-100">
                      <% if activity.photo.attached? %>
                        <%= cl_image_tag activity.photo.key, class: "card-img-top" %>
                      <% else %>
                        <%= image_tag "placeholder.svg", class: "card-img-top" %>
                      <% end %>
                      <div class="card-body">
                        <h5 class="card-title"><b><%= activity.name %></b></h5>
                        <p class="card-text text-muted mb-0"><%= activity.description %></p>
                        <%= link_to "", activity_path(activity, trip_id: @trip.id), class: "stretched-link", aria: { label: "Voir #{activity.name}" } %>
                      </div>
                      <div class="card-footer">
                        <p class="mb-0"><%= activity.address %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

            <% else %>
              <div class="col-12">
                <div class="empty-state">
                  <p class="m-0">No Activity planned yet </p>
                </div>
              </div>
            <% end %>


          <div class="d-flex flex-wrap gap-3 mt-4">
            <%= button_to "ðŸš€ Enhance with guAIde", chats_path(trip_id: @trip.id), method: :post, class: "btn btn-primary" %>
            <%= button_to "ðŸ”Ž Find activities", trip_trip_activities_path(trip_id: @trip.id), method: :get, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <% if @chats.present? && @chats.any? %>
        <div class="mt-4 text-center">
          <h4 class="mb-3">Previous conversations:</h4>
          <div class="row g-2 justify-content-center">
            <% @chats.each do |chat| %>
              <div class="col-12">
                <%= link_to chat.title, chat_path(chat),
                      class: "badge d-block text-truncate bg-light px-3 py-2 rounded-3 text-dark text-decoration-none conversation-badge",
                      style: "max-width: 100%;" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

          </div>
    </div>
  </div>
