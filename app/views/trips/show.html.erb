<div class="container mt-5 trips-show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="trip-card shadow-lg">
        <div class="trip-card__header">
          <h1 class="title"><%= @trip.name %></h1>
          <p class="subtitle">
            <span class="muted">Destination</span>
            <strong><%= @trip.destination %></strong>
          </p>
          <div class="chips">
            <% if @trip.start_date.present? && @trip.end_date.present?%>
              <span class="chip">📅 <%= l(@trip.start_date) %> - <%= l(@trip.end_date) %></span>
            <% end %>
            <% if @trip.mood.present? %>
              <span class="chip chip--mint"><%= @trip.mood %></span>
            <% end %>
          </div>
        </div>
        <div class="trip-card__body p-4 p-md-5">
          <h3 class="section-title">My activities</h3>
          <div class="row g-4">
            <% @trip.trip_activities.each do |trip_activity| %>
              <div class="col-12 col-md-6">
                <div class="card activity-card h-100">
                  <div class="card-body">
                    <h5 class="card-title"><%= trip_activity.activity.name %></h5>
                    <p class="card-text text-muted mb-0"><%= trip_activity.activity.description %></p>
                  </div>
                  <div class="card-footer">
                    <p class="mb-0"><%= trip_activity.activity.address %></p>
                  </div>
                </div>
              </div>
            <% end %>
            <% if @trip.trip_activities.empty? %>
              <div class="col-12">
                <div class="empty-state">Nothing planned yet.</div>
              </div>
            <% end %>
          </div>
          <div class="d-flex flex-wrap gap-3 mt-4">
            <%= button_to "🚀 Enhance this trip with guAIde", chats_path(trip_id: @trip.id), method: :post, class: "btn btn-primary" %>
            <%= link_to "🗑️ Delete trip", trip_path(@trip),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?" },
                  class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
