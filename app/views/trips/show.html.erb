<div class="container mt-5 trips-show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="trip-card shadow-lg">
        <div class="trip-card__header">
          <h1 class="title"><%= @trip.name %></h1>
          <p class="subtitle">
            <span class="muted">Destination :</span>
            <strong><%= @trip.destination %></strong>
          </p>
          <div class="chips">
            <% if @trip.start_date.present? %>
              <span class="chip">📅 <%= l(@trip.start_date) %> - <%= l(@trip.end_date) %></span>
            <% end %>
            <% if @trip.mood.present? %>
              <span class="chip chip--mint"><%= @trip.mood %></span>
            <% end %>
          </div>
        </div>
        <div class="trip-card__body p-4 p-md-5">
          <h3 class="section-title">My activities</h3>
          <div class="row g-4">
            <% @trip.trip_activities.each do |trip_activity| %>
              <div class="col-12 col-md-6">
                <div class="card activity-card h-100">
                  <div class="card-body">
                    <h5 class="card-title"><%= trip_activity.activity.name %></h5>
                    <p class="card-text text-muted mb-0"><%= trip_activity.activity.description %></p>
                  </div>
                  <div class="card-footer">
                    <p class="mb-0"><%= trip_activity.activity.address %></p>
                  </div>
                </div>
              </div>
            <% end %>
            <% if @trip.trip_activities.empty? && @trip.description.blank? %>
              <div class="col-12">
                <div class="empty-state">Nothing planned yet.</div>
              </div>
              <% else %>
              <div class="col-12">
                <div class="empty-state"><%= markdown(@trip.description ) %></div>
              </div>
            <% end %>
          </div>
          <div class="d-flex flex-wrap gap-3 mt-4">
            <%= button_to "🚀 Enhance with guAIde", chats_path(trip_id: @trip.id), method: :post, class: "btn btn-primary" %>
            <%= link_to "🗑️ Delete", trip_path(@trip),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?" },
                  class: "btn btn-primary" %>
          </div>
        </div>
      </div>
<div class="mt-4 text-center">
  <h2 class="mb-3">Previous conversations:</h2>
  <div class="row g-2 justify-content-center">
    <% @chats.each do |chat| %>
      <div class="col-12">
        <%= link_to chat.title, chat_path(chat),
              class: "badge d-block text-truncate bg-light px-3 py-2 rounded-3 text-dark text-decoration-none conversation-badge",
              style: "max-width: 100%;" %>
      </div>
    <% end %>
  </div>
</div>
