<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="mb-4">
        <%= @activity.name %>
      </h2>
      <div class="row">
          <div class="col-md-3 mb-4"> <!-- 4 cards par ligne -->
            <div class="card h-100">
                  <% if @activity.photo.attached? %>
                    <%= image_tag @activity.photo.variant(resize_to_fill: [600, 300]).processed, class: "card-img-top" %>
                  <% else %>
                    <%= image_tag "placeholder.svg", class: "card-img-top" %>
                  <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= @activity.description %></h5>
              </div>
              <div class="card-footer">
                <p class="mb-1"> Address : <%= @activity.address %></p>
              </div>
            </div>
          </div>
      </div>
      <%= link_to "⬅️ Back to activities", activities_path, class: 'btn btn-secondary mt-4' %>
    </div>
  </div>
</div>
