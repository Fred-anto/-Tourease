<%= turbo_frame_tag "favorite_button_#{@activity.id}" do %>
  <% if current_user.favorited?(activity) %>
    <%= button_to unfavorite_activity_path(activity),
                  method: :delete,
                  class: "btn border-0 rounded-circle d-flex align-items-center justify-content-center" do %>
                  <iconify-icon icon="healthicons:heart"
                  style="color: red; width: 30px; height: 85px; font-size: 45px"></iconify-icon>
    <% end %>
  <% else %>
    <%= button_to favorite_activity_path(activity),
                  method: :post,
                  class: "btn border-0 rounded-circle d-flex align-items-center justify-content-center" do %>
                  <iconify-icon icon="healthicons:heart-outline"
                  style="color: red; width: 30px; height: 85px; font-size: 45px"></iconify-icon>
    <% end %>
  <% end %>
<% end %>
