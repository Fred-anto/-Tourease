
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Create a New Activity</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for @activity do |f| %>
            <div class="form-group">
              <%= f.input :photo, as: :file, label: "Photo" %>
              <%= f.input :name, label: 'Activity Name', input_html: { class: 'form-control' } %>
              <%= f.input :address, label: 'Activity Address', input_html: { class: 'form-control' } %>
              <%= f.input :description, label: 'Activity Description', input_html: { class: 'form-control' } %>
              <%= f.association :category, label: "Select a Category", input_html: { class: "form-control" } %>
            </div>
            <div class="form-group mt-3">
              <%= f.submit '➕ Create activity', class: 'btn btn-primary mt-4'  %>
              <%= link_to "⬅️ Back to activities", activities_path, class: 'btn btn-secondary mt-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
