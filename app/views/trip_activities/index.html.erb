<%= render "shared/navbar" %>

<div class="container mt-1">
  <div class="row justify-content-center mb-5">
    <div class="col-md-8">

   <!-- Back arrow à gauche -->
    <div class="d-flex align-items-center">
      <%= link_to trip_path(@trip), class: "text-decoration-none text-dark d-flex align-items-center justify-content-center me-2 my-4 rounded-4",
                      style: "border: 1px solid #adb5bd; width: 45px; height: 40px; line-height: 60px;" do %>
        <i class="fa-solid fa-arrow-left fs-3"></i>
      <% end %>
      <h2 class="d-flex align-items-center justify-content-center my-4 section-title chip-title">Select your activities</h2>
      </div>

      <% @categories.each do |category| %>
        <h3 class="mt-2 cat-title chip-title"><%= category.name %></h3>

        <div class="swipe-carousel mt-2" data-controller="swipe">
          <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="<%= category.name %>">
            <% category.activities.each do |activity| %>
              <% unless @trip.activities.include?(activity) %>
                <div class="card h-100">
                  <%= link_to "", activity_path(activity, trip_id: @trip.id), class: "stretched-link", aria: { label: "Voir #{activity.name}" } %>
                  <% if activity.photo.attached? %>
                    <%= cl_image_tag activity.photo.key, crop: :fill, class: "card-img-top" %>
                  <% else %>
                    <%= image_tag "placeholder.svg", class: "card-img-top" %>
                  <% end %>

                  <div class="card-body">
                    <h5 class="card-title mb-1"><b><%= activity.name %></b></h5>
                    <p class="card-title mb-1"><%= activity.description %></p>
                  </div>

            <!-- Footer : Adresse + Étoiles (non cliquables ici, la card entière mène à la show) -->
            <div class="card-footer bg-transparent footer-stack">
              <p class="mb-1 address-line"><%= activity.address %></p>
              <div class="rating-row d-inline-flex align-items-center gap-2">
                <%= render "shared/rating",
                           rating: activity.rating_avg,
                           reviews_count: activity.reviews_count %>
              </div>
            </div>

                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <h2 class="mt-3 cat-title chip-title">Top Trendy Activities</h2>
      <div class="swipe-carousel mt-2" data-controller="swipe">
        <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="Top trendy activities">
          <% @activities.sample(20).each do |activity| %>
            <% unless @trip.activities.include?(activity) %>
              <div class="card h-100">
                <%= link_to "", activity_path(activity, trip_id: @trip.id), class: "stretched-link", aria: { label: "Voir #{activity.name}" } %>
                <% if activity.photo.attached? %>
                  <%= cl_image_tag activity.photo.key, crop: :fill, class: "card-img-top" %>
                <% else %>
                  <%= image_tag "placeholder.svg", class: "card-img-top" %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title mb-1"><b><%= activity.name %></b></h5>
                  <p class="card-title mb-1"><%= activity.description %></p>
                </div>
            <!-- Footer : Adresse + Étoiles (non cliquables ici, la card entière mène à la show) -->
            <div class="card-footer bg-transparent footer-stack">
              <p class="mb-1 address-line"><%= activity.address %></p>
              <div class="rating-row d-inline-flex align-items-center gap-2">
                <%= render "shared/rating",
                           rating: activity.rating_avg,
                           reviews_count: activity.reviews_count %>
              </div>
            </div>

              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <h2 class="cat-title mt-2 chip-title">Must-See Activities</h2>
      <div class="swipe-carousel mt-2" data-controller="swipe">
        <div class="swipe-carousel__track" data-swipe-target="track" role="region" aria-label="Must-see activities">
          <% @activities.sample(20).each do |activity| %>
            <% unless @trip.activities.include?(activity) %>
              <div class="card h-100">
                <%= link_to "", activity_path(activity, trip_id: @trip.id), class: "stretched-link", aria: { label: "Voir #{activity.name}" } %>
                <% if activity.photo.attached? %>
                  <%= cl_image_tag activity.photo.key, crop: :fill, class: "card-img-top" %>
                <% else %>
                  <%= image_tag "placeholder.svg", class: "card-img-top" %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title mb-1"><b><%= activity.name %></b></h5>
                  <p class="card-title mb-1"><%= activity.description %></p>
                </div>
            <!-- Footer : Adresse + Étoiles (non cliquables ici, la card entière mène à la show) -->
            <div class="card-footer bg-transparent footer-stack">
              <p class="mb-1 address-line"><%= activity.address %></p>
              <div class="rating-row d-inline-flex align-items-center gap-2">
                <%= render "shared/rating",
                           rating: activity.rating_avg,
                           reviews_count: activity.reviews_count %>
              </div>
            </div>

              </div>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
